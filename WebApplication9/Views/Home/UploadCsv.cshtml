@{
    ViewData["Title"] = "Upload CSV for PCA Analysis";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Upload CSV for PCA Analysis</h1>
                <form method="post" enctype="multipart/form-data" asp-action="PerformPCA">
                    <div class="custom-file mb-3">
                        <input type="file" class="custom-file-input" id="csvFile" name="csvFile" accept=".csv">
                        <label class="custom-file-label" for="csvFile">Choose CSV File</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Perform PCA</button>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
